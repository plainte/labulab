* {
  box-sizing: border-box;
}

{% assign orange = '#E3A725' %}
{% assign whiteish = '#EEECE8' %}
{% assign grey = '#E8E3DD' %}
{% assign pinkish = '#DB7B61' %}
{% assign blue = '#2B3990' %}

.simple-i-design {
  background-color: {{ grey }};
  width: 100%;
}

.simple-i-design-content {
  padding-top: 10px;
  padding-bottom: 10px;
  margin: auto;
  word-wrap: break-word;
  text-align: justify;
  color: {{ pinkish }};
  font-weight: bold;
  font-size: large;
  width: 50%
}

.wave-heading_wave-image {
  position: absolute;
  left: -50%;
  width: 500%;
  height: .75rem;
  background-image: url('wave.svg');
  background-position: 0 50%;
  background-size: auto .75rem;
  background-repeat: repeat-x;
}

/* Float four columns side by side */
.i-column {
  margin: 0px auto;
  padding: 0px 25px;
  max-width: max-content;
  width: 50%;
  transition: .6s;
}

.px50-div {
  height:50px;
}

.i-column-with-top-bottom-margin {
  margin: 25px auto;
  min-width: 50%;
  transition: .6s;
  max-width: 75%;
}

.i-column:hover  {
  z-index: 1;
  -webkit-transform: scale(1.1) translate3d( 0, 0, 0) perspective(1px);
  -moz-transform: scale(1.1) translate3d( 0, 0, 0) perspective(1px);
    -o-transform: scale(1.1) translate3d( 0, 0, 0) perspective(1px);
   -ms-transform: scale(1.1) translate3d( 0, 0, 0) perspective(1px);
       transform: scale(1.1) translate3d( 0, 0, 0) perspective(1px);
}

/* Remove extra left and right margins, due to padding in columns */
.i-row {margin: 0 -5px;}

/* Clear floats after the columns */
.i-row:after {
  content: "";
  display: table;
  clear: both;
}

.i-card-colored-border {
  padding: 25px;
  /* background: url('test.svg') no-repeat, #f1f1f1;
  background-size: 100% 100%; */
  border-style: solid;
  border-color: {{ orange }};
  border-width: 5px;
  border-radius: 1rem;
  margin: 0 auto;
  width: fit-content;
}


.i-card-basic {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); /* this adds the "card" effect */
  padding: 0px;
  /* background: url('test.svg') no-repeat, #f1f1f1;
  background-size: 100% 100%; */
  border-radius: 1rem;
  background-color: {{ whiteish }};
}

.i-column-header {
  position: relative;
  padding: 15px 15px 0px 15px;
  width: 100%;
  height: 25%;
  border-bottom-style: solid;
  border-bottom-color: white;
}


.vl {
  border-left: 6px solid {{ whiteish }};
  left: 50%;
  height: 50px;
  position:relative;
}

.i-content {
  padding: 25px;
  word-wrap: break-word;
  text-align: left;
}

/* Float two columns side by side */
.i-credit-column {
  float: left;
  padding: 0 50px;
  width: 50%;
  color: {{ pinkish }};
  font-weight: bold;
}

/* Remove extra left and right margins, due to padding in columns */
.i-credit-row {
  margin: 0 20%;
}

/* Clear floats after the columns */
.i-credit-row:after {
  content: "";
  display: table;
  clear: both;
}

.quote-from {
  text-align: right;
  color: {{ blue }};
}

.wave {
  width: 100%;
  height: 350px;
}

/* Responsive columns - one services-column layout (vertical) on small screens */
@media screen and (max-width: 600px) {
  .i-column {
    width: 100%;
    display: block;
  }

  .simple-i-design-content {
    padding-top: 5px;
    padding-bottom: 5px;
    margin: auto;
    word-wrap: break-word;
    text-align: center;
    width: 80%
  }

  /* Float two columns side by side */
  .i-credit-column {
    padding: 0 50px;
    width: 100%;
    color: {{ pinkish }};
    font-weight: bold;
  }

  /* Remove extra left and right margins, due to padding in columns */
  .i-credit-row {
    margin: auto;
  }

  .wave {
    width: 100%;
    height: 100px;
  }
}